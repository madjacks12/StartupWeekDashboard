{{#partial "content"}}
<h1>Event list!</h1>
{{#if events}}
<h2>All Events:</h2>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col">Name:</th>
            <th scope="col">Description:</th>
            <th scope="col">Year:</th>
            <th scope="col">Day:</th>
            <th scope="col">Month:</th>
            <th scope="col">Attendees:</th>
        </tr>
    </thead>
    {{#each events}}
    <tbody>
         <tr>
             <th scope="row"></th>
             <td>{{name}}</td>
             <td>{{description}}</td>
             <td>{{year}}</td>
             <td>{{day}}</td>
             <td>{{month}}</td>
             <td>{{attendees}}</td>
        </tr>
    </tbody>
    {{/each}}
</table>
{{else}}
<p>No events added yet</p>
{{/if}}

{{/partial}}

{{> layout.hbs}}