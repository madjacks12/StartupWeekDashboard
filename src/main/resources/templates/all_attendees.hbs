{{#partial "content"}}
<h1>Event list!</h1>
{{#if attendees}}
<h2>All Events:</h2>
<table class="table table-striped table-dark">
    <thead>
    <tr>
        <th scope="col"></th>
        <th scope="col">First Name:</th>
        <th scope="col">last Name:</th>
        <th scope="col">email:</th>
        <th scope="col">phone:</th>

    </tr>
    </thead>
    {{#each attendees}}
    <tbody>
    <tr>
        <th scope="row"></th>
        <td>{{firstName}}</td>
        <td>{{lastName}}</td>
        <td>{{email}}</td>
        <td>{{phone}}</td>
        <td><a href="/events/{{id}}/update" type="click" class="btn btn-success">Edit</a></td>
        <td><a href="/events/{{id}}/attendees/new" type="click" class="btn btn-success">Add Attendees</a></td>
    </tr>
    </tbody>
    {{/each}}
</table>
{{else}}
<p>No Attendees added yet</p>
{{/if}}

{{/partial}}

{{> layout.hbs}}